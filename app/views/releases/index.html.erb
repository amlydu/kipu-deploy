<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Releases</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<!-- bootstrap table -->
<div class="panel-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                      <tr>
                        <th>Release Master ID #</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Uuid</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @releases.each do |release| %>
                      <tr>
                        <td><%= release.release_main_id %></td>
                        <td><%= release.start_time %></td>
                        <td><%= release.end_time %></td>
                        <td><%= release.uuid %></td>
                      </tr>
                      <% end %>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.col-lg-4 (nested) -->
        <div class="col-lg-8">
            <div id="morris-bar-chart"></div>
        </div>
        <!-- /.col-lg-8 (nested) -->
    </div>
    <!-- /.row -->
</div>
